{#- name: "worker_sbatch_script" -#}

{% if batch_worker %}
. '{{ worker_script_path }}'
{% else %}
srun /bin/bash '{{ worker_script_path }}'
{% endif %}

{#- name: "worker_script" -#}

#!/bin/bash

. '/etc/profile'
. '{{ setup_script }}'

set -Eeuo pipefail
set -x

echo "Starting worker on $(hostname)"

slurm-pilot-worker \
    --type '{{ type }}' \
    --name '{{ name }}' \
    --server-address '{{ server_address }}' \
    --work-dir '{{ work_dir }}'
